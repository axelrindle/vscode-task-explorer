{
    "name": "task-explorer",
    "displayName": "Task Explorer",
    "description": "Upgraded Task Explorer GUI inspired by 'Task Explorer' by Scott Meesseman.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "task-explorer.refresh-tasks",
                "title": "Refresh tasks",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "task-explorer.favorite-task",
                "title": "Add task to favorites",
                "icon": "$(extensions-star-empty)"
            },
            {
                "command": "task-explorer.unfavorite-task",
                "title": "Remove task from favorites",
                "icon": "$(extensions-star-full)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "task-explorer",
                    "title": "Task Explorer",
                    "icon": "resources/gear.svg"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "task-explorer",
                    "name": "Task Explorer",
                    "icon": "resources/gear.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "task-explorer",
                "contents": "No tasks found."
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "task-explorer.refresh-tasks",
                    "when": "view == task-explorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "task-explorer.favorite-task",
                    "when": "view == task-explorer && viewItem == taskItem",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "Task Explorer",
            "properties": {
                "task-explorer.excludeGroups": {
                    "type": "array",
                    "default": [],
                    "description": "Exclude task groups.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "remeda": "^1.40.1"
    }
}
